---
const { frontmatter } = Astro.props;
import Baselayout from "./Baselayout.astro";
---
<style>
    p{font-size: 1.6em;}
    h1{font-size: 3em}
</style>
<Baselayout>
        <div class="blogheader">
            <div><h1>{frontmatter.title}</h1></div>
            <div><p>Ecrit par {frontmatter.author} - {frontmatter.Date.toString().slice(0,10)}</p></div>
            <div><img src={frontmatter.image.src} alt={frontmatter.image.alt} width="1200" height="600" /></div>
        </div>
        <div class="content">
            <slot />
        </div>
        <div class = "Tags">
            <!-- <a href={"/tag/ยง{tag}"} class="badge">{tag}</a>-->
        </div>
    </div>
</Baselayout>